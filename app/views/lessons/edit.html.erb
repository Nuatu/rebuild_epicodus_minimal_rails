<% content_for(:title, "Edit Lesson | Learn How to Program") %>

<h1>Edit <%= @lesson.name %></h3>


<% if @lesson.errors.any? %>
  <ul>
    <% @lesson.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/lessons/<%= @lesson.id %>"method="post">
  <input name="_method" type="hidden" value="patch">
  <%= render('layouts/form', object: @sections) %>
  <button>Update this Lesson</button>
</form>

<br><br>
<p><a href="/lessons">Table of Contents</a></p>
