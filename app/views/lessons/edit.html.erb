<h1>Edit <%= @lesson.name %></h3>


<% if @lesson.errors.any? %>
  <ul>
    <% @lesson.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/lessons/<%= @lesson.id %>"method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="lesson_number">Lesson number</label>
  <input id="lesson_number" name="lesson[number]" type="number" value="<%= @lesson.number %>">
  <label for="lesson_name">Name</label>
  <input id="lesson_name" name="lesson[name]" type="text" value="<%= @lesson.name %>">
  <label for="lesson_context">Context</label>
  <input id="lesson_context" name="lesson[context]" type="text" value="<%= @lesson.context %>">
  <button>Update this Lesson</button>
</form>

